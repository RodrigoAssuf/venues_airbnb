<div id="smallbanner">
<br>
<br>
<br>
<br>
  <h1 class="fontsmallbanner"> Here are your bookings </h1>
  <p class="fontsmallbanner"></p>
<br>
<br>

    <% @bookings.each do |b| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <img class="card-img-top img-responsive" src="https://source.unsplash.com/random/2500x1500" alt="wedding">
          <div class="card-category"> <%= b.venue.category %> </div>
          <div class="card-name"><%= b.venue.name %></div>
          <div class="card-address">  <%= b.user.email %></div>
          <div class="card-price"><%= b.final_date %></div>
        </div>
          <div class="quick-button">Edit</div>
          <div class="quick-button">Delete</div>
      </div>
    <% end %>
</div>
</div>
