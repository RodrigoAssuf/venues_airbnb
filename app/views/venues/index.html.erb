      <% @venues.each do |venue| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= render 'venues/card', venue: venue %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-6">

    <div
    id="map"
    style="width: 100%;
    height: 100vh;"
