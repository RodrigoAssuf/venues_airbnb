<%= cl_image_tag @venue.photo, height: 300, width: 400, crop: :fill %>

<h3>Category: <%= @venue.category %></h3>
<h3>Name: <%= @venue.name %></h3>
<h3>Address: <%= @venue.address %></h3>
<h3>Price: <%= @venue.price %></h3>

<% if @venue.user == current_user %>
  <a class="actionbutton" <%= link_to 'Edit this Venue', edit_venue_path(@venue) %> </a>
  <a class="actionbutton" <%= link_to 'View bookings', venue_bookings_path(@venue, @booking) %> </a>
  <a class="actionbutton" <%= link_to 'Delete this Venue', venue_path(@venue), method: :delete, data: { confirm: "Are you sure you want to delete this Venue?" } %>
<% else %>
  <%= link_to 'Book this Venue', new_venue_booking_path(@venue, @booking) %>
<% end %> </a>

