<h1>Venue Show Test Page</h1>

<p>Category: <%= @venue.category %></p>
<p>Name: <%= @venue.name %></p>
<p>Address: <%= @venue.address %></p>
<p>Price: <%= @venue.price %></p>

<% if @venue.user == current_user %>
  <%= link_to 'Edit this Venue', edit_venue_path(@venue) %>
  <%= link_to 'View the bookings of this Venue', venue_bookings_path(@venue, @booking) %>
  <%= link_to 'Delete this Venue', venue_path(@venue), method: :delete, data: { confirm: "Are you sure you want to delete this Venue?" } %>
<% else %>
  <%= link_to 'Book this Venue', new_venue_booking_path(@venue, @booking) %>
<% end %>

<%= link_to 'Back to Home', root_path %>
