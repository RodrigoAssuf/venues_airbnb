<div class="smallbanner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1530103862676-de8c9debad1d?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=af5af77aed859c2f16c5234900f54ab9&auto=format&fit=crop&w=1350&q=80');">

<h1 class="bannertext2">Venue's information:</h1>

<%= cl_image_tag @venue.photo, height: 300, width: 400, crop: :fill %>

<p class="bannertext3">Category: <%= @venue.category %></p>
<p class="bannertext3">Name: <%= @venue.name %></p>
<p class="bannertext3">Address: <%= @venue.address %></p>
<p class="bannertext3">Price: <%= @venue.price %></p>

<% if @venue.user == current_user %>
  <a class="actionbutton" <%= link_to 'Edit this Venue', edit_venue_path(@venue) %> </a>
  <a class="actionbutton" <%= link_to 'View bookings', venue_bookings_path(@venue, @booking) %> </a>
  <a class="actionbutton" <%= link_to 'Delete this Venue', venue_path(@venue), method: :delete, data: { confirm: "Are you sure you want to delete this Venue?" } %>
<% else %>
  <%= link_to 'Book this Venue', new_venue_booking_path(@venue, @booking) %>
<% end %> </a>

<a class="actionbutton" <%= link_to 'Back to Home', root_path %> </a>
