        <div class="card">
          <img class="card-img-top img-responsive" src="https://source.unsplash.com/random/2500x1500" alt="wedding">
          <div class="card-category"> <%= v.category %> </div>
          <div class="card-name"><%= link_to v.name, venue_path(v) %></div>
